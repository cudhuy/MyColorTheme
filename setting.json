{
	"security.workspace.trust.untrustedFiles": "open",
	"gitlens.advanced.messages": {
		"suppressGitMissingWarning": true
	},
	"github.copilot.chat.commitMessageGeneration.instructions": [
		{
			"file": ".copilot-commit-message-instructions.md"
		},
		{
			"text": "Use conventional commit message format. Less than 8 words. Use imperative mood. Use present tense. Do not use a period at the end. Start with lowercase letter."
		}
	],
	"git.openRepositoryInParentFolders": "never",
	"git.autofetch": true,
	"code-runner.runInTerminal": true,
	"color-highlight.markerType": "underline",
	"color-highlight.matchWords": true,
	"prettier.singleQuote": true,
	"prettier.jsxSingleQuote": true,
	"prettier.trailingComma": "all",
	"prettier.useTabs": true,
	"workbench.activityBar.location": "top",
	"workbench.list.smoothScrolling": true,
	"workbench.tree.enableStickyScroll": true,
	"workbench.iconTheme": "pcode-icon-theme-dark-spesifik",
	"workbench.productIconTheme": "fluenticon",
	"workbench.colorTheme": "Beautiful Dracula Normal",
	"workbench.editor.doubleClickTabToToggleEditorGroupSizes": "maximize",
	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
		"markdown": "html"
	},
	// font 1
	// "editor.fontWeight":"500",
	// "editor.fontFamily": "'monolisa',Source Code Pro, Consolas, monospace",
	// font 2
	"editor.fontFamily": "'Cascadia Code','monolisa'",
	"editor.fontWeight": "400",
	"editor.suggest.preview": true,
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.mouseWheelZoom": true,
	"editor.accessibilityPageSize": 15,
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.letterSpacing": 0.75,
	"editor.fontLigatures": true,
	"editor.wordWrap": "on",
	"editor.wordWrapColumn": 100,
	"editor.cursorWidth": 2,
	"editor.cursorBlinking": "phase",
	"editor.guides.bracketPairsHorizontal": false,
	"editor.stickyScroll.enabled": true,
	"editor.stickyScroll.scrollWithEditor": true,
	"editor.smoothScrolling": true,
	"editor.hover.sticky": false,
	"editor.lineHeight": 24,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"explorer.fileNesting.enabled": true,
	"files.autoSave": "afterDelay",
	"redhat.telemetry.enabled": true,
	"terminal.integrated.smoothScrolling": true,
	"terminal.integrated.suggest.enabled": true,
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.fontFamily": "'GeistMono','monolisa'",
	"terminal.integrated.lineHeight": 1.1,
	"vscode_custom_css.imports": ["file:///D:/VScode/ColorTheme/colorTheme.css"],
	"workbench.colorCustomizations": {
		"activityBar.foreground": "#ff0883",
		"activityBarTop.foreground": "#f6c4f2",
		"menubar.selectionBackground": "#ff417a9c",
		"sideBar.background": "#171827",
		"sideBarSectionHeader.background": "#121526",
		"sideBar.border": "#c792a255",
		"sideBarSectionHeader.border": "#c792a23f",
		"editor.background": "#121526", //light: #15192c
		"editorLineNumber.foreground": "#b169bcdc", //#a069bcdc
		"editorLineNumber.activeForeground": "#fc6087dc",
		"editorWidget.border": "#fc6087dc",
		"editorStickyScrollHover.background": "#c792a223",
		"tab.inactiveForeground": "#50a4e98c",
		"tab.activeModifiedBorder": "#fc6060f4",
		"tab.activeBorderTop": "#ed39de", //#ed39de #fb4934
		"scrollbarSlider.activeBackground": "#bf607c82",
		"scrollbarSlider.background": "#c792a26e",
		"scrollbarSlider.hoverBackground": "#b8728782",
		"keybindingLabel.background": "#c792a23f",
		"terminal.foreground": "#ffcdda",
		"terminal.background": "#151727f6",
		"panel.background": "#191a2e",
		"panelTitle.activeBorder": "#ed39de",
		"panel.border": "#fc6060f4",
		"list.activeSelectionBackground": "#c792a23f",
		"list.inactiveSelectionBackground": "#c792a223",
		"list.hoverBackground": "#c792a214",
		"statusBar.background": "#1c15175b",
		"statusBarItem.hoverBackground": "#ff417a9c"
	},
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": "string",
				"settings": {
					"foreground": "#f0c693"
				}
			}
		]
	},
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[css]": {
		"editor.suggest.insertMode": "replace"
	},
	"html.format.wrapLineLength": 120,
	// "javascript.inlayHints.parameterNames.enabled": "literals",
	// "javascript.inlayHints.parameterTypes.enabled": true,
	"javascript.inlayHints.propertyDeclarationTypes.enabled": true,
	"javascript.inlayHints.functionLikeReturnTypes.enabled": true,
	"typescript.inlayHints.enumMemberValues.enabled": true,
	"typescript.inlayHints.functionLikeReturnTypes.enabled": true,
}

